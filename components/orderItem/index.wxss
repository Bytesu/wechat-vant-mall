/* components/orderItem/index.wxss */
.item {
  width: 702rpx;
  padding: 6rpx 0;
  display: flex;
  align-items: center;
  position: relative;
}

.goods-img {
  width: 136rpx;
  height: 136rpx;
  margin-right: 12rpx;
  border-radius: 8rpx;
}

.good-info {
  height: 156rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}

.name {
  margin-bottom: 12rpx;
}

.name text {
  font-size: 24rpx;
  line-height: 34rpx;
}

.info {
  font-size: 24rpx;
  font-weight: 400;
  background: #f9f9f9;
  color: #727272;
  display: inline;
}

.expand {
  width: 24rpx;
  min-width: 24rpx;
  height: 14rpx;
  padding-right: 10rpx;
}

.price {
  position: absolute;
  top: 24rpx;
  right: 48rpx;
  font-size: 20rpx;
}

.price text {
  font-size: 28rpx;
}

.num {
  position: absolute;
  bottom: 24rpx;
  right: 48rpx;
  font-size: 20rpx;
}
.num {
  font-size: 28rpx;
}