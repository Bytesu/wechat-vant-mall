/* components/bottomBtn/index.wxss */
.btn-wrap {
  width: 100%;
  height: 132rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  box-shadow: 0px -4rpx 12rpx 0rpx #eee;
}

.btn {
  width: 702rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg,#ffd251 0%,#fead19 100%);
  border-radius: 44rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255,255,255,1);
}

.btn.grey {
  background: #d8d8d8;
  color: #fff;
}