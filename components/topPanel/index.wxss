/* components/topPanel/index.wxss */
.pannel-cls {
  width: 100%;
  height: 88rpx;
  background: #fff;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  position: fixed;
  top: 0;
  left: 0;
}

.position {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500; 
}

.position .pos-icon {
  width: 24rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.position .expand {
  width: 20rpx;
  height: 10rpx;
}

.input-cls {
  width: 320rpx;
  height: 60rpx;
  background: #f9f9f9;
  border-radius: 30rpx;
  border: 2rpx solid #eee;
  display: flex;
  align-items: center;
}

.input-cls image {
  min-width: 28rpx;
  width: 28rpx;
  height: 28rpx;
  padding-right: 8rpx;
  margin-left: 68rpx;
}

.input-cls input {
  font-size: 28rpx;
  font-weight: 400;
  color: #727272;
  line-height: 40rpx;
}