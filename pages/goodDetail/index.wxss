/* pages/goodDetail/index.wxss */
.banner-img {
  width: 750rpx;
  height: 500rpx;
}

.good-info {
  padding: 20rpx 26rpx;
  background: #fff;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(22,17,10,1);
  line-height: 44rpx;
  margin-bottom: 20rpx;
}

.price text {
  font-size: 44rpx;
  font-family: DIN-Medium,DIN;
  font-weight: 500;
}

.specifications {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 16rpx 0;
  padding: 0 24rpx;
  background: #fff;
}

.expand {
  width: 12rpx;
  height: 24rpx; 
  margin-left: 12rpx;
}

/* 商品详情 */
.panel {
  background: #fff;
  padding: 0 24rpx 24rpx 24rpx;
}

.panel-top {
  height: 80rpx;
}

.border-l,
.border-r {
  width: 92rpx;
  height: 2rpx;
  background: #eee;
  margin: 0 16rpx;
}

/* 底部购物车按钮 */
.btn-wrap {
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  box-shadow: 0px -4rpx 12rpx 0rpx #eee;
}

.btn {
  width: 580rpx;
  height: 98rpx;
  background: linear-gradient(135deg,#ffd251 0%,#fead19 100%);
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-wrap {
  flex-grow: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  position: relative;
}

.shop-icon {
  width: 58rpx;
  height: 58rpx;
}

.shop-num {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 9rpx;
  left: 90rpx;
  background: #ff6e1f;
  border-radius: 14rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 选择规格popup */
.item {
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
}

.goods-img {
  width: 216rpx;
  height: 240rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.pop-good-info {
  height: 240rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}

.name {
  margin-bottom: 12rpx;
}

.name text {
  font-weight: 500;
  color: #16110a;
  line-height: 40rpx;
}

.info {
  font-size: 24rpx;
  font-weight: 400;
  background: #f9f9f9;
  color: #727272;
  display: inline;
}

.pop-price text {
  font-size: 44rpx;
}

.title {
  font-weight: 500;
  color: #151009;
  line-height: 40rpx;
  padding: 24rpx;
}

.btns {
  display: flex;
  flex-wrap: wrap; 
}

.btns text {
  height: 56rpx;
  padding: 0 28rpx;
  margin-bottom: 24rpx;
  background: #eee;
  border: 2rpx solid #eee;
  border-radius: 4rpx;
  margin-left: 24rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btns text.active {
  background: #fffaf1;
  border-radius: 4rpx;
  border: 2rpx solid #fead19;
  color: #FEAD19;
}

/* 步进器 */
.buy-num {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.stepper {
  display: flex;
  align-items: center;
}

.stepper image {
  width: 36rpx;
  height: 36rpx;
  padding: 20rpx;
}