/* pages/confirmOrder/index.wxss */

.confirm-wrap {
  min-height: 100%;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f9f9f9;
  padding-bottom: 200rpx;
}

.goods-panel {
  width: 702rpx;
  background: #fff;
  padding: 40rpx 24rpx;
  border-radius: 16rpx;
  /* margin-bottom: 200rpx; */
}

.wx-icon {
  width: 40rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

/* 底部panel */
.bottom-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 96rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0px -4px 12px 0px rgba(238,238,238,1);
}

.select-wrap {
  width: 120rpx;
  display: flex;
  align-items: center;
}

.total-wrap {
  display: flex;
  flex-grow: 1;
  align-items: center;
  padding-left: 48rpx;
}

.total-price {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.price-num {
  font-size: 44rpx;
  line-height: 51rpx;
  margin-left: 8rpx;
}

.settlement-btn {
  width: 262rpx;
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg,rgba(255,210,81,1) 0%,rgba(254,173,25,1) 100%);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.cancel-wrap {
  display: flex;
  justify-content: flex-end;
}

.cancel-btn {
  width: 156rpx;
  height: 56rpx;
  border-radius: 40rpx;
  border: 2rpx solid #d8d8d8;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #727272;
}

.order-num {
  width: 100%;
  height: 128rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}

/* 弹出层 */
.pop {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
}

.pop .pop-cont {
  width: 508rpx;
  height: 284rpx;
  padding: 48rpx 50rpx 0 50rpx;
  background: #fff;
  border-radius: 16rpx;
  position: absolute;
  left: 143rpx;
  top: 350rpx;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cont {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  color: rgba(22,17,10,1);
  line-height: 44rpx;
}

.btn-wrap {
  width: 368rpx;
  height: 72rpx;
  margin-top: 48rpx;
  background: linear-gradient(144deg,#ffd251 0%,#fea20b 100%);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight:500;
  color: #fff;
  line-height: 44rpx;
  letter-spacing: 4rpx;
}