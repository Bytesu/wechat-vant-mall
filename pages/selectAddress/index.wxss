/* pages/selectAddress/index.wxss */
.select-wrap {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.select-wrap .add-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.address-list {
  background: #fff;
  padding: 0rpx 24rpx;
}

.item {
  height: 100%;
  padding-top: 24rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.item:last-child {
  border-bottom: none;
}

.name-info {
  color: #727272;
  margin: 8rpx 0 24rpx 0;
}