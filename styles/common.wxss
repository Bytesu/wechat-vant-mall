  margin: 12rpx 0;
  border-radius: 28rpx;
  border: 2rpx solid #d8d8d8;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #727272;
}

.margin-t-12 {
  margin-top: 12rpx;
}

.margin-t-24 {
